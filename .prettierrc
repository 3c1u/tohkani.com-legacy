{
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "tabWidth": 4,
    "useTabs": false,
    "overrides": [
        {
            "files": ".prettierrc",
            "options": { "parser": "json" }
        },
        {
            "files": ".parcelrc",
            "options": { "parser": "json" }
        },
        {
            "files": ".postcssrc",
            "options": { "parser": "json" }
        }
    ]
}
